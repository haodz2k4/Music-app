doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/admin/css/styles.css")
        link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH', crossorigin='anonymous')
        title #{pageTitle}
    body 
    
    
    include ../partials/sider.pug 
    .main-content
      header
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
          a.navbar-brand(href='/admin/auth/login') 
          button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
            span.navbar-toggler-icon
          #navbarNav.collapse.navbar-collapse
            ul.navbar-nav.ml-auto
              li.nav-item.active
                a.nav-link(href='#')
                  | Home 
                  span.sr-only (current)
                li.nav-item
                  a.nav-link(href='/admin/auth/logout') Logout  
              
      // Page content
      .container-fluid
        block main 
    script(type='application/javascript', src='/tinymce/tinymce.min.js')
    // Script element sourcing the TinyMCE configuration
    script(type='application/javascript', src='/admin/js/my-tinymce-config.js') 
    script(src="/admin/js/script.js") 

