include ../../mixins/show-alert.pug
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0") 
        link(rel="stylesheet", href="/admin/css/auth.css") 
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
        title Đăng Nhập Admin
    body 
     .wrapper 
      form(action="" method="POST").login_box 
        +alertSuccess(success_msg)
        +alertError(error_msg)
        .login-header
          span Admin Login
        .input_box
          input#user.input-field(type='text', required='' name='email')
          label.label(for='user') Email
          i.bx.bx-user.icon
        .input_box
          input#pass.input-field(type='password', required='' name='password')
          label.label(for='pass') Password
          i.bx.bx-lock-alt.icon
        .remember-forgot
          .remember-me
            input#remember(type='checkbox')
            label(for='remember') Ghi nhớ tôi
        .input_box
          input.input-submit(type='submit', value='Login')
        .register
          span
            | Bạn quên mật khẩu ? 
            a(href='#') Admin