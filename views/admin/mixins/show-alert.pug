mixin alertSuccess(success_msg) 
    if success_msg.length
        .alert-success(class='alert alert-success')
            span.closebtn(onclick="this.parentElement.style.display='none';") &times;
            | #{success_msg} 
mixin alertError(error_msg) 
    if error_msg.length
        .alert(class='alert alert-danger')
            span.closebtn(onclick="this.parentElement.style.display='none';" ) &times;
            | #{error_msg} 